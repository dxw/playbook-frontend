<article class="page-content">
  <h1><%= @title %></h1>

  <% if @document.content.empty? %>
    <ul>
      <% @document.children.each do |child| %>
        <li>
          <a href="<%= child['url'] %>"><%= child['title'] %></a>
        </li>
      <% end %>
    </ul>
  <% else %>
    <%= @document.content %>
    <% if @document.updated_at %>
      <hr>
      <p id="last-review-and-updated">
        <i>Last updated: <%= @document.updated_at.strftime("%-d %B %Y") %></i>
      </p>
    <% end %>
  <% end %>
</article>